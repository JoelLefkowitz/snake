{
  "name": "snake",
  "description": "An SDL2 implementation of the classic game Snake.",
  "version": "0.2.0",
  "private": false,
  "license": "MIT",
  "author": "Joel Lefkowitz",
  "repository": "https://github.com/joellefkowitz/snake",
  "homepage": "https://joellefkowitz.github.io/snake",
  "metadata": {
    "publisher": null,
    "languages": [
      "C++"
    ],
    "frameworks": [
      "SDL2"
    ],
    "paradigms": [
      "Event driven"
    ],
    "lifecycle": "Stable"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "cspell . --dot && cppclean . --include-path $CPPPATH && cppcheck **/*.*pp -q --enable=all --suppressions-list=.cppcheck && scons --typecheck",
    "format": "prettier . --write && clang-format -i **/*.*pp",
    "docs": "doxygen"
  },
  "devDependencies": {
    "cspell": "^8.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.0.0"
  }
}
