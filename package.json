{
  "metadata": {
    "publisher": null,
    "languages": [
      "C++"
    ],
    "frameworks": [
      "SDL2"
    ],
    "paradigms": [
      "Event driven"
    ],
    "lifecycle": "Stable"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "cspell . --dot && cppclean . --include-path $CPPPATH && cppcheck **/*.*pp -q --enable=all --suppressions-list=.cppcheck && scons --typecheck",
    "format": "prettier . --write && clang-format -i **/*.*pp",
    "docs": "doxygen"
  },
  "devDependencies": {
    "cspell": "^8.0.0",
    "husky": "^9.0.0",
    "prettier": "^3.0.0"
  }
}
